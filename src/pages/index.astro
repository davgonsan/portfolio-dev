---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/AboutMe.astro";
import Badge from "../components/Badge.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Experience from "../components/Experience.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import WhereIFrom from "../components/icons/Venezuela.astro";

---

<Layout
  title="Portfolio David Gonzalez - Programador | Desarrollador de Software con 2 años de experiencia"
  description="Desarrollador de Software | Proyectos"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32" id="contacto">
      <img
        class="rounded-full w-18 h-24 mb-4"
        src="../../public/me_comic.jpeg"
        alt="Foto de David Gonzalez"
      />
      <h1
        class="text-gray-900 dark:text-[rgb(255,252,255)] text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, soy David <WhereIFrom class="size-10" />
        <a
          href="https://linkedin.com/in/david-gonzalez-dev2012"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Disponible para proyectos</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span class="text-green-700 dark:text-green-400/90"
          >+2 años de experiencia</span
        > como
        <span class="text-sky-700 dark:text-blue-400/90">
          Desarrollador De Software. </span
        ><span
          class="opacity-90">Especializado en </span
        ><span class="text-red-800 dark:text-red-400/90">otorgarle vida a tus proyectos.</span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://linkedin.com/in/david-gonzalez-dev2012">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/davgonsan">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:davidgonzalezdev@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          davidgonzalezdev@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
